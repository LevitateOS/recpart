{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://levitateos.dev/schemas/recpart/list-disks.schema.json",
  "title": "recpart list-disks result",
  "type": "object",
  "required": ["schema_version", "disks"],
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "disks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "size_bytes",
          "logical_sector_bytes",
          "physical_sector_bytes",
          "model",
          "transport",
          "read_only"
        ],
        "properties": {
          "path": { "type": "string" },
          "size_bytes": { "type": "integer", "minimum": 1 },
          "logical_sector_bytes": { "type": "integer", "minimum": 1 },
          "physical_sector_bytes": { "type": "integer", "minimum": 1 },
          "model": { "type": "string" },
          "transport": { "type": "string" },
          "read_only": { "type": "boolean" }
        }
      }
    }
  }
}
